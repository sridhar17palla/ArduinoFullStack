<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/sub_title_strings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection Status :" />

        <TextView
            android:id="@+id/usb_connection_status"
            style="@style/sub_title_strings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Connected" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/sub_title_strings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device type :" />

        <TextView
            android:id="@+id/usb_device_name"
            style="@style/sub_title_strings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N/A" />
    </LinearLayout>
    <!--Manufacture Name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/sub_title_strings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manufacture Name :" />

        <TextView
            android:id="@+id/usb_manufacture_name"
            style="@style/sub_title_strings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N/A" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/sub_title_strings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name :" />

        <TextView
            android:id="@+id/usb_product_name"
            style="@style/sub_title_strings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N/A" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/sub_title_strings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Id :" />

        <TextView
            android:id="@+id/usb_product_id"
            style="@style/sub_title_strings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N/A" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/sub_title_strings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serial Number :" />

        <TextView
            android:id="@+id/usb_serial_number"
            style="@style/sub_title_strings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N/A" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/sub_title_strings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor ID" />

        <TextView
            android:id="@+id/usb_vendor_id"
            style="@style/sub_title_strings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N/A" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/sub_title_strings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version :" />

        <TextView
            android:id="@+id/usb_device_version"
            style="@style/sub_title_strings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N/A" />
    </LinearLayout>

</LinearLayout>