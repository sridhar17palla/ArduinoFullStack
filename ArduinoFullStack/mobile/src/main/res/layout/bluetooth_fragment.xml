<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            style="@style/title_strings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/connect_arduino_bluetooth" />

        <LinearLayout
            android:id="@+id/paired_bt_device_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
        <TextView
            android:id="@+id/no_paired_bt_devices"
            style="@style/indicating_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Bluetooth devices found" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey" />

        <TextView
            style="@style/title_strings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/available_BT_devices" />

        <LinearLayout
            android:id="@+id/new_bt_device_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
        <TextView
            android:id="@+id/no_new_bt_devices"
            style="@style/indicating_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No new devices found" />
    </LinearLayout>
</ScrollView>